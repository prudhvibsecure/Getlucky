<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tv_title1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Add  Offer"
            android:textSize="@dimen/_16sdp"
            android:textColor="@color/colorPrimaryDark"
            android:textStyle="bold"
            android:textAllCaps="true"
            android:gravity="center"
            android:padding="10dp"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:gravity="left|center"
            android:layout_marginTop="10dp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:padding="10dp"
                android:textColor="@color/black"

                android:text="Customer Offer*" />

            <EditText
                android:id="@+id/add_co"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="end"
                android:background="@drawable/tobcccc_border"
                android:ems="6"
                android:gravity="center"
                android:inputType="number"
                android:textColor="@color/black"
                android:textColorHint="@color/text_hint_color"
               android:drawableRight="@mipmap/percentage"
                android:drawablePadding="10dp"
                android:padding="10dp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:gravity="left|center"
            android:layout_marginTop="10dp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:padding="10dp"
                android:textColor="@color/black"

                android:text="Minimum Amount" />

            <EditText
                android:id="@+id/add_min"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="end"
                android:background="@drawable/tobcccc_border"
                android:ems="6"
                android:inputType="number"
                android:textColor="@color/black"
                android:textColorHint="@color/text_hint_color"
                android:gravity="center"
                android:padding="10dp"
                android:text="1" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:gravity="left|center"
            android:layout_marginTop="10dp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:padding="10dp"
                android:textColor="@color/black"
                android:text="Maximum Amount" />

            <EditText
                android:id="@+id/add_max"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="end"
                android:background="@drawable/tobcccc_border"
                android:ems="6"
                android:inputType="number"
                android:textColor="@color/black"
                android:textColorHint="@color/text_hint_color"
                android:gravity="center"
                android:padding="10dp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:gravity="left|center"
            android:layout_marginTop="10dp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:padding="10dp"
                android:textColor="@color/black"
                android:text="Customer Referral" />

            <EditText
                android:id="@+id/add_cr"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="end"
                android:background="@drawable/tobcccc_border"
                android:ems="6"
                android:editable="false"
                android:cursorVisible="false"
                android:inputType="number"
                android:textColor="@color/black"
                android:textColorHint="@color/text_hint_color"
                android:gravity="center"
                android:padding="10dp"
                android:drawableRight="@mipmap/percentage"
                android:drawablePadding="10dp"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:gravity="left|center"
            android:layout_marginTop="10dp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:padding="10dp"
                android:textColor="@color/black"
                android:text="Store Referral" />

            <EditText
                android:id="@+id/add_sr"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="end"
                android:background="@drawable/tobcccc_border"
                android:ems="6"
                android:gravity="center"
                android:inputType="number"
                android:editable="false"
                android:cursorVisible="false"
                android:textColor="@color/black"
                android:textColorHint="@color/text_hint_color"
                android:padding="10dp"
                android:drawableRight="@mipmap/percentage"
                android:drawablePadding="10dp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:gravity="left|center"
            android:layout_marginTop="10dp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:padding="10dp"
                android:textColor="@color/black"
                android:text="Admin" />

            <EditText
                android:id="@+id/add_admin"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="end"
                android:background="@drawable/tobcccc_border"
                android:ems="6"
                android:gravity="center"
                android:inputType="number"
                android:editable="false"
                android:cursorVisible="false"
                android:textColor="@color/black"
                android:textColorHint="@color/text_hint_color"
                android:padding="10dp"
                android:drawableRight="@mipmap/percentage"
                android:drawablePadding="10dp"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:gravity="left|center"
            android:layout_marginTop="10dp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:padding="10dp"
                android:textColor="@color/black"
                android:text="Total Offer" />

            <EditText
                android:id="@+id/add_to"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="end"
                android:background="@drawable/tobcccc_border"
                android:ems="6"
                android:gravity="center"
                android:textColor="@color/black"
                android:editable="false"
                android:cursorVisible="false"
                android:textColorHint="@color/text_hint_color"
                android:padding="10dp"
                android:inputType="number"
                android:drawableRight="@mipmap/percentage"
                android:drawablePadding="10dp"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
           android:layout_margin="20dp"
            android:gravity="center">


            <TextView
                android:id="@+id/bt_preview"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Preview"
                android:textColor="@color/white"
                android:gravity="center"
                android:background="@drawable/gradient"
                android:padding="10dp"/>

            <TextView
                android:id="@+id/bt_add"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Add Offer"
                android:gravity="center"
                android:layout_marginLeft="10dp"
                android:textColor="@color/white"
                android:background="@drawable/gradient"
                android:padding="10dp"/>
        </LinearLayout>

    </LinearLayout>

</RelativeLayout>