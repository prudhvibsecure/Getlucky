<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
   android:background="@color/white">

    <LinearLayout
        android:id="@+id/view_list_repo_action_container"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center|end"
        android:gravity="end"
        android:background="@color/white"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/view_list_repo_action_status"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:background="@color/darkgrey"
            android:gravity="center"
            android:layout_weight="1"
            android:padding="10dp"
            android:text="In-Active"
            android:textColor="@android:color/white" />
        <TextView
            android:id="@+id/view_list_edit_view"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:background="@color/historyexam"
            android:gravity="center"
            android:layout_weight="1"
            android:padding="10dp"
            android:text="Edit"
            android:textColor="@android:color/white" />

        <TextView
            android:id="@+id/view_list_repo_action_delete"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:background="@color/red"
            android:gravity="center"
            android:layout_weight="1"
            android:padding="10dp"
            android:text="Delete"
            android:textColor="@android:color/white" />



    </LinearLayout>

    <include layout="@layout/search_store_item_nn" />
</FrameLayout>